class Main {

    function void main() {
        var Game game;
        var DrawModule drawer;
        // create draw module and draw logo
        let drawer = DrawModule.new();
        do drawer.drawLogoScreen();
        do Sys.wait(200);
        //do Keyboard.readChar();
        // now play game indefinitely
        while (true) {
            let game = Game.new(drawer);
            do game.title();
            do game.play();
            do game.fin();
            do game.dispose();
        }
        do drawer.dispose();
        return;
    }

}
