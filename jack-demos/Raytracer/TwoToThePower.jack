// To precompute values of 2^i.
class TwoToThePower {
    static Array power;
    
    function void init() {
        var int val, i;

        let power = Array.new(16);
        let val = 1;
        while (i < 16) {
            let power[i] = val;
            let val = val + val;
            let i = i + 1;
        }        
        return;
    }
    
    function int of(int i) {
        return power[i];
    }
}
